<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:resize_mode="fill"
        app:surface_type="texture_view"
        app:use_controller="false">

    </com.google.android.exoplayer2.ui.PlayerView>

    <!--<TextView-->
    <!--android:id="@+id/start_decode"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="start video decode"-->
    <!--android:textColor="#ffffff"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--android:layout_marginTop="64dp"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent" />-->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="60dp"
        android:paddingLeft="@dimen/clip_frame_bar_width"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent">

    </android.support.v7.widget.RecyclerView>

    <com.spx.videoclipeditviewtest.ClipFrameLayout
        android:id="@+id/clipframe"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/frame_left"
            android:layout_width="@dimen/clip_frame_bar_width"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/left_frame">

            <ImageView
                android:id="@+id/left_iv"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/triangle" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/frame_right"
            android:layout_width="@dimen/clip_frame_bar_width"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/right_frame">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:rotation="180"
                android:scaleType="fitCenter"
                android:src="@drawable/triangle" />
        </RelativeLayout>

    </com.spx.videoclipeditviewtest.ClipFrameLayout>


    <TextView
        android:id="@+id/toast_msg_tv"
        android:layout_width="104dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_bg"
        app:layout_constraintBottom_toTopOf="@+id/clipframe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>